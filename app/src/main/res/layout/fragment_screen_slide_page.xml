<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/circles_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="2dp">

        <LinearLayout
            android:id="@+id/button_pronunciation"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_speaker"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:src="@drawable/speaker" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_word_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:inputType="textCapSentences"
            android:textColor="#070707"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_word_pronunciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#AFB6BE"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_word_kazakh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:inputType="textCapSentences"
            android:textColor="#5C6F80"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>