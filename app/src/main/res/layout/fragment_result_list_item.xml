<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:id="@+id/container">

        <LinearLayout
            android:id="@+id/layout_detector"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_ok"
            android:gravity="center">

            <ImageView
                android:id="@+id/detector"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:src="@drawable/ok_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:textColor="#5C6F80"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/correct_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_ok"
            android:paddingBottom="13dp"
            android:autoText="false"
            android:paddingTop="13dp"
            android:text="New Text"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

        <TextView
            android:id="@+id/incorrect_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_x"
            android:autoText="false"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="New Text"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

    </LinearLayout>

</FrameLayout>